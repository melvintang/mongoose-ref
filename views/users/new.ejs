<fieldset>
  <legend>Add a User</legend>
  <form method="POST" action="/users">
    <div class="form-group col-md-4">
      <input name="user[relationship]" class="form-control" placeholder="Relationship"/>
    </div>
    <div class="form-group col-md-4">
      <input name="user[family]"  class="form-control" placeholder="Family"/>
    </div>
    <div class="form-group col-md-4">
      <input name="user[name]"  class="form-control" placeholder="Name"/>
    </div>
    <div class="form-group col-md-4">
      <input name="user[gender]"  class="form-control" placeholder="Gender(M F)"/>
    </div>
    <div class="form-group col-md-4">
      <input type="date" name="user[dob]"  class="form-control" placeholder="Birthdate"/>
    </div>
    <div class="form-group col-md-4">
      <button class="btn btn-success col-md-12">Add the User</button>
    </div>
  </form>
</fieldset>
